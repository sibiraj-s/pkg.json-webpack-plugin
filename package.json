{
  "name": "pkg.json-webpack-plugin",
  "version": "2.0.1",
  "description": "Loads package.json into webpack app as an environment variable",
  "author": "sibiraj-s",
  "license": "MIT",
  "private": true,
  "repository": "https://github.com/sibiraj-s/pkg.json-webpack-plugin.git",
  "bugs": "https://github.com/sibiraj-s/pkg.json-webpack-plugin/issues",
  "homepage": "https://github.com/sibiraj-s/pkg.json-webpack-plugin",
  "engines": {
    "node": ">=10.13"
  },
  "keywords": [
    "package.json",
    "webpack",
    "plugins"
  ],
  "scripts": {
    "lint": "eslint . --ignore-path .gitignore",
    "prebuild": "gulp clean",
    "build": "tsc",
    "postbuild": "gulp prepareLib",
    "test": "jest",
    "prepublishOnly": "node ./scripts/prepublish.js",
    "prerelease": "npm run test && npm run build",
    "release": "sh ./scripts/release.sh",
    "prepare": "is-ci || husky install"
  },
  "peerDependencies": {
    "webpack": "^5.0.0"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "read-pkg": "^5.2.0",
    "schema-utils": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.4",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "babel-jest": "^27.0.2",
    "chalk": "^4.1.1",
    "eslint": "^7.28.0",
    "eslint-config-pegasus": "^2.0.3",
    "gulp": "^4.0.2",
    "husky": "^6.0.0",
    "is-ci": "^3.0.0",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "normalize-package-data": "^3.0.2",
    "prettier": "^2.3.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2",
    "webpack": "^5.38.1"
  }
}
