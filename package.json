{
  "name": "pkg.json-webpack-plugin",
  "version": "2.0.1",
  "description": "Loads package.json into webpack app as an environment variable",
  "author": "sibiraj-s",
  "license": "MIT",
  "private": true,
  "repository": "https://github.com/sibiraj-s/pkg.json-webpack-plugin.git",
  "bugs": "https://github.com/sibiraj-s/pkg.json-webpack-plugin/issues",
  "homepage": "https://github.com/sibiraj-s/pkg.json-webpack-plugin",
  "engines": {
    "node": ">=10.13"
  },
  "keywords": [
    "package.json",
    "webpack",
    "plugins"
  ],
  "scripts": {
    "lint": "eslint . --ignore-path .gitignore",
    "prebuild": "gulp clean",
    "build": "tsc",
    "postbuild": "gulp prepareLib",
    "test": "jest",
    "prepublishOnly": "node ./scripts/prepublish.js",
    "prerelease": "npm run test && npm run build",
    "release": "sh ./scripts/release.sh",
    "prepare": "is-ci || husky install"
  },
  "peerDependencies": {
    "webpack": "^5.0.0"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "read-pkg": "^5.2.0",
    "schema-utils": "^3.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@commitlint/cli": "^13.2.0",
    "@commitlint/config-conventional": "^13.2.0",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.175",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "babel-jest": "^27.2.2",
    "chalk": "^4.1.2",
    "eslint": "^7.32.0",
    "eslint-config-pegasus": "^2.1.1",
    "gulp": "^4.0.2",
    "husky": "^7.0.2",
    "is-ci": "^3.0.0",
    "jest": "^27.2.2",
    "jest-extended": "^0.11.5",
    "lint-staged": "^11.1.2",
    "normalize-package-data": "^3.0.3",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3",
    "webpack": "^5.54.0"
  }
}
